---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Tutorial</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		
		<div class="social-links">
			<a href="https://github.com/USERNAME" target="_blank">GitHub â†—</a>
		</div>
	</nav>
</header>

<style>
	/* Kita sudah atur styling utama di global.css, 
	   di sini hanya penyesuaian kecil layout */
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.internal-links {
		display: flex;
		gap: 10px;
	}
	.social-links a {
		font-size: 0.85rem;
		color: var(--gray);
		text-decoration: none;
	}
	
	/* Responsif untuk HP */
	@media (max-width: 600px) {
		.social-links { display: none; } /* Sembunyikan sosmed di HP */
		header h2 { font-size: 1rem; }
	}
</style>
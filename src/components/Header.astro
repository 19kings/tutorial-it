---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

// Mengambil URL saat ini untuk cek menu mana yang aktif
const { pathname } = Astro.url;
const isActive = (path: string) => pathname === path || (path !== '/' && pathname.startsWith(path));
---

<header class="bg-slate-900/80 backdrop-blur-md border-b border-slate-800 sticky top-0 z-50 transition-all">
	<nav class="max-w-5xl mx-auto flex items-center justify-between p-4">
		<a href="/" class="flex items-center gap-2 group transition-all hover:scale-105">
			<h2 class="font-extrabold text-xl tracking-tight text-slate-100">
				IT Expert<span class="text-indigo-500"> </span>
			</h2>
		</a>

		<div class="hidden md:flex items-center gap-1 bg-slate-800/50 p-1 rounded-full border border-slate-700/50 backdrop-blur">
			<a href="/" class:list={[{ 'bg-indigo-600 text-white shadow-md shadow-indigo-500/20': pathname === '/' }, 'px-4 py-1.5 rounded-full text-sm font-medium text-slate-300 hover:text-white transition-all relative group']}>
				Home
			</a>
			<a href="/blog" class:list={[{ 'bg-indigo-600 text-white shadow-md shadow-indigo-500/20': isActive('/blog') }, 'px-4 py-1.5 rounded-full text-sm font-medium text-slate-300 hover:text-white transition-all']}>
				Tutorial
			</a>
			<a href="/about" class:list={[{ 'bg-indigo-600 text-white shadow-md shadow-indigo-500/20': pathname === '/about' }, 'px-4 py-1.5 rounded-full text-sm font-medium text-slate-300 hover:text-white transition-all']}>
				About
			</a>
		</div>

		<div class="flex items-center gap-4">
			<a href="https://github.com/usernameBli" target="_blank" class="text-slate-400 hover:text-white transition p-2 hover:bg-slate-800 rounded-full">
				<span class="sr-only">GitHub</span>

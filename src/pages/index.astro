---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

// 1. LOGIKA PENGAMBILAN DATA (Backend di Frontend)
// Ambil semua artikel dari folder 'blog'
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Kita hanya ambil 3 artikel terbaru untuk halaman depan
const latestPosts = posts.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="hero-section">
                <h1>üë®‚Äçüíª Tutorial IT Expert</h1>
                <p class="intro">
                    Solusi masalah komputer yang <strong>99% Akurat</strong>. 
                    Tanpa basa-basi, langsung ke inti masalah.
                </p>
                <div class="action-buttons">
                    <a href="/blog" class="btn-primary">Lihat Semua Tutorial ‚ûû</a>
                </div>
            </div>

            <hr class="divider" />

            <section class="latest-posts">
                <h3>üî• Tutorial Terbaru</h3>
                <ul class="post-grid">
                    {
                        latestPosts.map((post) => (
                            <li>
                                <a href={`/blog/${post.id}/`}>
                                    <div class="image-container">
                                        <img width={720} height={360} src={post.data.heroImage} alt="" />
                                    </div>
                                    <h4 class="title">{post.data.title}</h4>
                                    <p class="date">
                                        <FormattedDate date={post.data.pubDate} />
                                    </p>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </section>

            <div class="features">
                <h3>Mengapa Membaca di Sini?</h3>
                <ul>
                    <li>‚úÖ <strong>Tested:</strong> Semua solusi sudah dicoba sebelum ditulis.</li>
                    <li>‚ö° <strong>Fast:</strong> Website tanpa iklan berat.</li>
                </ul>
            </div>
		</main>
		<Footer />
	</body>
</html>

<style>
    /* CSS Tambahan agar rapi */
    .hero-section { text-align: center; padding: 3rem 0; }
    .intro { font-size: 1.2rem; color: var(--gray); max-width: 600px; margin: 0 auto 1.5rem auto; }
    
    .divider { margin: 3rem 0; border: 0; border-top: 1px solid var(--gray-light); }

    .latest-posts h3 { margin-bottom: 1.5rem; }
    
    /* Grid Layout untuk Artikel */
    .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        list-style: none;
        padding: 0;
    }
    
    .post-grid li { transition: transform 0.2s; }
    .post-grid li:hover { transform: translateY(-5px); }
    
    .post-grid a { text-decoration: none; color: inherit; }
    
    .image-container {
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1rem;
        border: 1px solid var(--gray-light);
    }
    
    .image-container img {
        width: 100%;
        height: 180px; /* Tinggi seragam agar rapi */
        object-fit: cover;
        display: block;
    }

    .title { font-size: 1.1rem; margin-bottom: 0.5rem; line-height: 1.4; }
    .date { font-size: 0.85rem; color: var(--gray); }

    .btn-primary {
        background-color: var(--accent);
        color: #fff;
        padding: 10px 24px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
    }
</style>